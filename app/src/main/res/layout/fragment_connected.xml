<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.loput.css.MainActivityFragment"
    >


    <ImageView
        android:layout_width="480dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/webcambutton"
        android:layout_marginTop="120dp"
        android:id="@+id/imageButtonCam"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="480dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/micbutton"
        android:layout_below="@+id/imageButtonCam"
        android:layout_alignLeft="@+id/imageButtonCam"
        android:layout_alignStart="@+id/imageButtonCam"
        android:layout_marginTop="120dp"
        android:id="@+id/imageButtonMic" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/camera"
        android:layout_marginLeft="113dp"
        android:layout_marginStart="113dp"
        android:id="@+id/imageView5"
        android:layout_above="@+id/imageButtonMic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/mic"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5"
        android:layout_marginBottom="35dp"
        android:id="@+id/imageButton" />
</RelativeLayout>
